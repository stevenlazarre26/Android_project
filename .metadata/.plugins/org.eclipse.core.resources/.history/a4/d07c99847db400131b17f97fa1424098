package com.example.pra;

import com.example.pra.Main.OurView;

import android.graphics.Bitmap;
import android.graphics.Canvas;
import android.graphics.Rect;

public class Sprite {
 int x,xSpeed,y, ySpeed,height, width;
 
 Bitmap s;
 OurView ov;
 int currentFrame = 0;
 int direction= 2;
	public Sprite(OurView ourView, Bitmap stick) {
		// TODO Auto-generated constructor stub
	s=stick;
	ov= ourView;
	// divide because theres four rows and columns
	height=s.getHeight() / 4;
	width=s.getWidth() /3;
	x=y=0;
	xSpeed=5;
	ySpeed=0;
	}
public void update(){
	//going down
	if(x > ov.getWidth()- width){
		xSpeed=0;
		ySpeed=5;
		direction=0;
	}
	
	//going left
	if(y > ov.getHeight()- height){
		xSpeed=-5;
		ySpeed=0;
		direction=1;
	}
	// going up screen
	if(x+xSpeed<0){
		x=0;
		xSpeed=0;
		ySpeed=-5;
		direction=3;
	}
	//going right
	if(y+ySpeed<0){
		y=0;
		xSpeed=5;
		ySpeed=0;
		direction=2;
	}
	try {
		Thread.sleep(50);
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
	currentFrame= ++ currentFrame % 1;
	x+=xSpeed;
	y+=ySpeed;
}
	public void onDraw(Canvas canvas) {
		// TODO Auto-generated method stub
		update();
		int srcY=direction * height;
		int srcX=currentFrame* width;
		
		Rect src= new Rect(srcX,srcY, srcX + width,srcY + height);
		Rect dst= new Rect(x,2,x + width, y + height);
		canvas.drawBitmap(s,src,dst,null);
	}

}
