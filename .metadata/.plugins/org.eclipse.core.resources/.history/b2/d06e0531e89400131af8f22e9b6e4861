package com.example.app;

import java.util.Timer;
import java.util.TimerTask;

import android.annotation.SuppressLint;
import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.EditText;
import android.widget.ImageView;



public class splash extends Activity {
	
	 int         elapsed = 0;    //elapsed time so far	
		
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		
		super.onCreate(savedInstanceState);
	setContentView(R.layout.activity_splash);



	
	
	final ImageView   loadinglogo;   //loading raven at the start of the app
	Timer       timer;          //timer that we're gonna have to use
	
	loadinglogo= (ImageView) findViewById(R.id.logo);
	
    TimerTask task = new TimerTask()
    {
      public void run()
       {
        elapsed++;
            runOnUiThread(new Runnable() //run on ui thread
               {
                @SuppressLint("NewApi")
				public void run() 
                { 


                   loadinglogo.setAlpha((float)(Math.sin(elapsed)+1)/2);
               }
               });

   }
};timer = new Timer();
timer.scheduleAtFixedRate(task, 0, 50);
	}

	public void MainActivity(View view){
		 splash.this.finish();
		Intent intent= new Intent(this,MainActivity.class);
		startActivity(intent);
		
	}
	


	
}