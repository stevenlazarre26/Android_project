import java.io.*;
import java.util.*;
import java.util.regex.*;

public class file {

	private Scanner x;
	int count = 0;
	char largest_int;
	
	public void openFile (){
		
		try {
			x= new Scanner(new File ("data.txt"));
		}
		
		catch(Exception e){
			System.out.println("could not find file");
		}
	}
	
	public void readFile(){
		
		while(x.hasNext()){
			String a = x.next();
			
			regexChecker("[0-9]{1,1}",a);
		}
	}

	public void regexChecker(String theRegex, String str2check){
		
		Pattern checkRegex= Pattern.compile(theRegex);
		
		Matcher regexMatcher= checkRegex.matcher(str2check);
		
	
		while(regexMatcher.find()){
			if(regexMatcher.group().length()!=0){
				count++;
				if(count<=str2check.length()){
				if (str2check.charAt(count-1)>str2check.charAt(count)){
					largest_int=str2check.charAt(count-1);
				}
				else{
					largest_int=str2check.charAt(count);
				}
				}
				
			}
		}
	}
	
	public void closeFile(){
		System.out.println("This document contains "+count+" integers.");
		System.out.println("The largest integer this document contains is "+largest_int);
		x.close();
	}
}